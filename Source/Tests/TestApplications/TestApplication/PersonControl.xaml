<UserControl x:Class="SampleWpfApp.PersonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SampleWpfApp;assembly=SampleWpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance local:PersonViewModel}">
    <StackPanel>
        <DockPanel>
            <TextBlock FontWeight="Bold" Text="Name" />
            <TextBox Text="{Binding Name, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:PersonControl}}}" DockPanel.Dock="Bottom" />
        </DockPanel>
        <DockPanel>
            <TextBlock FontWeight="Bold" Text="Surname" />
            <TextBox Text="{Binding Path=Surname}" />
        </DockPanel>
    </StackPanel>
</UserControl>
